{
  "manifest_version": 3,
  "name": "NuTube",
  "version": "1.0.0",
  "description": "YouTube for keyboard warriors",
  "permissions": [
    "cookies",
    "storage",
    "tabs",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*", "https://youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "NuTube",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "dashboard.html?surface=sidepanel"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "open-dashboard": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Open NuTube dashboard"
    },
    "toggle-side-panel": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "Open NuTube side panel on current tab"
    }
  },
  "chrome_url_overrides": {},
  "web_accessible_resources": [
    {
      "resources": ["dashboard.html", "dashboard.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
